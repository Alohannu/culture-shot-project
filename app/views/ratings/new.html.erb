<h2>Add your rating</h2>

<%= simple_form_for(@museum, @rating) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
   <%= f.input :title,
                required: true,
                autofocus: true,
    <%= f.input :comment,
                required: true,
                autofocus: true,
    <%= f.input :stars,
                required: true,
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Add" %>
  </div>
<% end %>

<%= render "ratings/new" %>
