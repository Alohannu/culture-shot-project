<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4">
      <h2>Add your rating</h2>

      <%= simple_form_for [@museum, @rating] do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :title %>

        <%= f.input :comment %>

        <%= f.input :stars, collection: 0..5 %>
      </div>
    <div class="form-actions">
      <%= f.button :submit, "Add" %>
    </div>
      <% end %>
    </div>
  </div>
</div>
