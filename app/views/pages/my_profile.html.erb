<%= render 'shared/parallax' %>

<div class="black-container">

  <div class="navbar-margin">
    <%= render 'shared/navbar' %>
  </div>

  <div class="container">
    <div class="row">
      <div class="both-margin-banner sidebyside">
        <div class="centered">
          <div class="col-12">
            <div class="navbar-margin">
              <h1><%= current_user.first_name %>'s Profile</h1>
              <%= cl_image_tag current_user.photo.key, crop: :thumb, gravity: :face, class: "avatar-large" %>
              <br>
              <strong>Name:</strong><p> <%= current_user.first_name %> <%= current_user.last_name %></p>
              <strong>Email:</strong> <p><%= current_user.email %> </p>
              <strong>Date of Birth:</strong> <p><%= current_user.date_of_birth %> </p>
            </div>
          </div>
        </div>

      <div class="row">
        <div class="col-12">
          <div style="margin-bottom:100px"><%= link_to "To the Homepage", root_path, class: "white-btn" %></div>
        </div>

        <div class="col-12">
          <div style="margin-bottom:100px"><%= link_to "To My Dashboard", dashboard_path, class: "white-btn" %></div>
        </div>

        <div class="col-12">
          <div style="margin-bottom:100px"><%= link_to "Edit My Profile", edit_user_registration_path, class: "white-btn" %></div>
        </div>

      </div>

    </div>
  </div>

</div>
