<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    .collapsible {
      background-color: black;
      color: white;
      cursor: pointer;
      padding: 18px;
      width: 100%;
      border: none;
      text-align: left;
      outline: none;
      font-size: 15px;
    }

    .active, .collapsible:hover {
      background-color: $dark-gray;
    }

    .collapsible:after {
      content: '\002B';
      color: black;
      font-weight: bold;
      float: right;
      margin-left: 5px;
    }

    .active:after {
      content: "\2212";
    }

    .content {
      background-color: black;
      padding: 0 18px;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.2s ease-out;
    }
  </style>
</head>

<div class="black-container">
  <div class="navbar-margin">
    <%= render 'shared/navbar' %>
  </div>

  <div class="single-margin">
    <div class="left">

      <% if @bookmark.exists? %>
        <%= link_to bookmark_path(@bookmark.first, from_dashboard: false), method: :delete do %>
          <div class="d-flex align-items-center">
            <div><i id="icon" class="fas fa-bookmark"></i></div>
            <div><p class="inline-text">This museum is in your list</p></div>
          </div>
        <% end %>
      <% else %>
        <%= link_to museum_bookmarks_path(@museum),class: "", method: :post do %>
          <div class="d-flex align-items-center">
            <div><i id="icon" class="far fa-bookmark"></i></div>
            <div><p class="inline-text">Save for later</p></div>
          </div>
        <% end %>
      <% end %>

      <h1><%= @museum.name%></h1>
      <p><%= @museum.description %></p>

      <div class="d-flex align-items-center">
        <div><i id="icon" class="fas fa-coins"></i></div>
        <div><p class="inline-text">â‚¬ <%= @museum.price %> per adult (<%= @museum.price %> reduced price)</p></div>
      </div>

      <div class="d-flex align-items-center icon-section">
        <div><i id="icon" class="far fa-clock"></i></div>
        <div><p class="inline-text"> <%= @museum.opening_hours %></p></div>
      </div>

      <%= link_to "Buy your ticket", museum_redirect_path(@museum), class: "white-btn" %>
    </div>

    <div class="right">
      <%= image_tag @museum.photo_url, class: "image-museum" %>
    </div>

  </div>
</div>

<div class="both-margin">
   <button class="collapsible"> >>  More details about the museum</button>
        <div class="content">
        <p><%= @museum.description %></p>
       </div>

 <script>
      var coll = document.getElementsByClassName("collapsible");
      var i;

      for (i = 0; i < coll.length; i++) {
        coll[i].addEventListener("click", function() {
          this.classList.toggle("active");
          var content = this.nextElementSibling;
          if (content.style.maxHeight){
            content.style.maxHeight = null;
          } else {
            content.style.maxHeight = content.scrollHeight + "px";
          }
        });
      }
      </script>
  
  <h2>What people say about <%= @museum.name%></h2>

  <% if !@museum.ratings.size.zero? %>

    <%= @museum.average %>
    <% @museum.average.to_i.times do %><i class="fas fa-star"></i><% end %>
    <% if @museum.average.modulo(1) > 0.5 %><i class="fas fa-star-half-alt"></i><% end %>
    <% @museum.average.modulo(1) > 0.5 ? total_star = 4 : total_star = 5 %>
    <% (total_star - @museum.average.to_i).times do %><i class="far fa-star"></i><% end %>

    <%= pluralize(@museum.ratings.size, 'review') %>

    <% @museum.ratings.first(2).each do |rating|  %>
      <p><strong><%= rating.user.first_name %><br>
      <%= rating.title %>:</strong> <%= rating.comment %></p>
    <% end %>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#potato">
      See all reviews
    </button>

    <!-- Modal -->
    <div class="modal fade" id="potato" tabindex="-1" aria-labelledby="potatoLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Reviews</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">

            <% @museum.ratings.first(6).each do |rating|  %>
              <p><strong><%= rating.user.first_name %><br>
              <%= rating.title %>:</strong> <%= rating.comment %></p>
            <% end %>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-secondary">Save changes</button>

          </div>
        </div>
      </div>
    </div>

  <% else %>
    <p>This museum does not have any reviews yet</p>
  <% end %>

  <!-- Button trigger modal -->
  <button type="button" class="white-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Add a rating
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add a rating</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

                    <h2 style="color:black">Add your rating</h2>

                    <%= simple_form_for [@museum, @rating] do |f| %>
                    <%= f.error_notification %>

                    <div class="form-inputs" style="color:black">
                      <%= f.input :title %>

                      <%= f.input :comment %>

                      <%= f.input :stars, collection: 0..5 %>
                    </div>
                  <div class="btn btn-secondary">
                    <%= f.button :submit, "Add a Rating" %>
                  </div>
                    <% end %>

        </div>
        <div class="modal-footer">

           <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <br><br>
  <%= link_to " << All museums", museums_path %>

</div>

